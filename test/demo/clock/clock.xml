var running = true;

window.onpause = function() {
running = false;
}

window.onresume = function() {
running = true;
setTime()
}
function setTime()
{
if(!running)
return;
	var d = new Date();
	var t;
        var m = d.getMinutes();
        if (m < 10)
            m = "0" + m
        var s = d.getSeconds();
        if (s < 10)
            s = "0" + s
	t = (d.getHours() % 12) + ":" + m;
	if (d.getHours() > 12) {
		t += "PM"
	} else {
		t += "AM"
	}
	document.getElementById("time").firstChild.data = t;

	window.setTimeout(setTime, 30*1000)

}

setTime();


document.getElementById("w").onclick = function() {
	if (this.src == "./test/demo/clock/cloud.png") {
		this.src = "./test/demo/clock/sun.png"
			document.getElementById("place").className = "red"
	}
	else {
		this.src = "./test/demo/clock/cloud.png"
			document.getElementById("place").className = ""
	}


}

